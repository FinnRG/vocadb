{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"jsx": "react",
		"removeComments": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./",
		"paths": {
			"@Bootstrap/*": ["ClientApp/src/Bootstrap/*"],
			"@Components/*": ["ClientApp/src/Components/*"],
			"@DataContracts/*": ["wwwroot/Scripts/DataContracts/*"],
			"@Helpers/*": ["wwwroot/Scripts/Helpers/*"],
			"@KnockoutExtensions/*": ["wwwroot/Scripts/KnockoutExtensions/*"],
			"@Models/*": ["wwwroot/Scripts/Models/*"],
			"@Repositories/*": ["wwwroot/Scripts/Repositories/*"],
			"@Shared/*": ["wwwroot/Scripts/Shared/*"],
			"@ViewModels/*": ["wwwroot/Scripts/ViewModels/*"]
		}
	},
	"include": ["wwwroot/Scripts/**/*", "Scripts/**/*", "ClientApp/src/**/*"]
}
